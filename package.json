{
  "name": "hades-star-data",
  "version": "1.0.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "webpack --mode development --watch --open",
    "build": "webpack --config ./frontend/webpack/webpack.prod.js",
    "dev": "webpack --config ./frontend/webpack/webpack.dev.js --open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/userXinos/HadesStarData.git"
  },
  "bugs": {
    "url": "https://github.com/userXinos/HadesStarData/issues"
  },
  "homepage": "https://github.com/userXinos/HadesStarData#readme",
  "staticFiles": {
    "staticPath": [
      "frontend/src/static"
    ]
  },
  "alias": {
    "vue": "./node_modules/vue/dist/vue.common.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@vue/component-compiler-utils": "^3.2.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^4.2.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-vue": "^6.2.2",
    "fastify": "^3.1.1",
    "fastify-autoload": "^3.0.5",
    "fastify-sensible": "^3.0.1",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "parcel": "^1.12.4",
    "pino-pretty": "^4.1.0",
    "prettier": "^2.0.5",
    "vue": "^2.6.11",
    "vue-hot-reload-api": "^2.3.4",
    "vue-i18n": "^8.20.0",
    "vue-loader": "^15.9.3",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.1",
    "webpack-runtime-analyzer": "^1.5.0",
    "yaml": "^1.10.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true
    },
    "extends": [
      "google",
      "plugin:vue/essential"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "rules": {
      "max-len": 0,
      "require-jsdoc": 0,
      "new-cap": 0,
      "prefer-promise-reject-errors": 0,
      "guard-for-in": 0,
      "no-unused-vars": 1,
      "vue/no-use-v-if-with-v-for": 1
    }
  },
  "eslintIgnore": [
    "data",
    "dist",
    "node_modules"
  ]
}
